@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";
}


<div class="card-deck p-5">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage2.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width: 20.5%;">
            <div class="card-header">
                <h3> @employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">
                    View
                </a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">
                    Edit
                </a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@employee.Id" class="btn btn-danger m-1">
                    Delete
                </a>
            </div>
        </div>
    }
</div>